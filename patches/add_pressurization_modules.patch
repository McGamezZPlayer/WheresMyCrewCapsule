:parts #cockpit_1v_m1* {
    +Module_Pressurization {
        +Data_Pressurization {
            TechNodesForPressurization: [wmcc_crewed_rocketry];
            UseScienceToChangePressurization: true;
            WarningAltitude: 13000.0;
            KillAltitude: 15000.0;
        }
    }
    PAMModuleVisualsOverride +: [
        {
            PartComponentModuleName: PartComponentModule_Pressurization,
            ModuleDisplayName: "WMCC/PressurizedCockpit",
            ShowHeader: true,
            ShowFooter: false
        }
    ];
}
